<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="399.0" prefWidth="742.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unoeste.fipp.dentalfx.DentistaTableController">
    <children>
        <HBox alignment="CENTER" maxHeight="50.0" minHeight="50.0" prefHeight="50.0" prefWidth="742.0" spacing="48.0" style="-fx-background-color: Yellow;">
            <children>
                <TextField fx:id="TextField" onKeyTyped="#onBusca" prefHeight="25.0" prefWidth="589.0" promptText="Informe o Dentista" />
                <Button mnemonicParsing="false" onAction="#onNovoMaterial" text="+" />
            </children>
        </HBox>
        <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colid" maxWidth="80.0" minWidth="75.0" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colnome" prefWidth="75.0" text="Nome" />
                <TableColumn fx:id="colcro" maxWidth="120.0" minWidth="75.0" prefWidth="75.0" text="CRO" />
            <TableColumn fx:id="colEmail" maxWidth="120.0" minWidth="75.0" prefWidth="75.0" text="EMAIL" />
            <TableColumn fx:id="colFone" maxWidth="120.0" minWidth="75.0" prefWidth="75.0" text="FONE" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onApagar" text="APAGAR" />
                        <MenuItem mnemonicParsing="false" onAction="#onAlterar" text="ALTERAR" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" maxHeight="50.0" minHeight="50.0" prefHeight="50.0" prefWidth="742.0" style="-fx-background-color: Yellow;">
            <children>
                <Button mnemonicParsing="false" onAction="#onFechar" prefHeight="25.0" prefWidth="120.0" text="Fechar" />
            </children>
        </HBox>
    </children>
</VBox>
